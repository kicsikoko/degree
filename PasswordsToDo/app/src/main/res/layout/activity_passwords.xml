<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Passwords">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pwd_toolbar"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@color/colorToolbar"
        android:theme="@style/ThemeOverlay.AppCompat"
        app:title="@string/empty"
        app:titleTextColor="@color/colorToolbar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pwd_title"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:textColor="@color/colorWhite"
            android:text="@string/pwd"
            android:textStyle="italic|bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pwd_subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/store_pwds"
            android:textColor="@color/colorTextGray"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:textSize="18sp"
            android:textStyle="italic"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pwds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/pwd_toolbar"
        android:padding="10dp"
        android:scrollbars="vertical"/>
    <TextView
        android:id="@+id/endlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorTextGray"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/rv_pwds"
        android:text="@string/no_more_items"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        />
    
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_add_24"
        android:backgroundTint="@color/colorToolbar"/>

</RelativeLayout>